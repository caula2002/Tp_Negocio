@model Tp_Negocio.Models.Chimi

@{
    ViewData["Title"] = "Eliminar Chimi";
}

<h1 class="text-center my-4">Eliminar Chimi</h1>

        <!-- Imagen del Producto -->
        @if (!string.IsNullOrEmpty(Model.NombreFoto))
        {
            <img src="~/imagenes/Chimis/@Model.NombreFoto" class="card-img-top" alt="@Model.Nombre" style="height: 300px; object-fit: contain; background-color: #f8f9fa;" asp-append-version="true" />
        }

        <!-- Detalles del Producto -->
        <div class="card-body">
            <h4 class="card-title text-center text-uppercase font-weight-bold">@Model.Nombre</h4>
            <p class="text-center text-danger">¿Estás seguro de que deseas eliminar este elemento?</p>
            <dl class="row">
                <dt class="col-sm-4">Cantidad</dt>
                <dd class="col-sm-8">@Model.Cantidad</dd>

                <dt class="col-sm-4">Stock</dt>
                <dd class="col-sm-8">@Model.Stock</dd>

                <dt class="col-sm-4">Ingredientes</dt>
                <dd class="col-sm-8">
                    <ul class="list-unstyled mb-0">
                        @foreach (var ingrediente in Model.Ingredientes.Split('\n'))
                        {
                            <li>@ingrediente</li>
                        }
                    </ul>
                </dd>
            </dl>
        </div>

        <!-- Formulario de Confirmación de Eliminación -->
        <div class="card-footer text-center">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Eliminar" class="btn btn-danger me-2" />
            </form>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>

