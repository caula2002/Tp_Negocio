@model Tp_Negocio.Models.Chimi

@{
    ViewData["Title"] = "Detalles del Chimi";
}

<h1 class="text-center my-4">Detalles del Chimi</h1>

        <!-- Imagen del Producto -->
        @if (!string.IsNullOrEmpty(Model.NombreFoto))
        {
            <img src="~/imagenes/Chimis/@Model.NombreFoto" class="card-img-top" alt="@Model.Nombre" style="height: 300px; object-fit: contain; background-color: #f8f9fa;" asp-append-version="true" />
        }

        <!-- Detalles del Producto -->
        <div class="card-body">
            <h4 class="card-title text-center text-uppercase font-weight-bold">@Model.Nombre</h4>
            <dl class="row">
                <dt class="col-sm-4">Cantidad</dt>
                <dd class="col-sm-8">@Model.Cantidad</dd>

                <dt class="col-sm-4">Stock</dt>
                <dd class="col-sm-8">@Model.Stock</dd>

                <dt class="col-sm-4">Ingredientes</dt>
                <dd class="col-sm-8">
                    <ul class="list-unstyled mb-0">
                        @foreach (var ingrediente in Model.Ingredientes.Split('\n'))
                        {
                            <li>@ingrediente</li>
                        }
                    </ul>
                </dd>
            </dl>
        </div>

        <!-- Botones de Acción -->
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm me-2">Editar</a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Volver a la Lista</a>
        </div>

