@model Tp_Negocio.Models.Proveedores

@{
    ViewData["Title"] = "Crear Proveedor";
}

<h1 class="text-center my-4">Crear Proveedor</h1>

            <h4 class="card-title text-center text-uppercase font-weight-bold mb-4">Información del Proveedor</h4>

            <!-- Formulario de Creación -->
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Campo Nombre -->
                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- Campo Localidad -->
                <div class="form-group mb-3">
                    <label asp-for="Localidad" class="form-label">Localidad</label>
                    <input asp-for="Localidad" class="form-control" />
                    <span asp-validation-for="Localidad" class="text-danger"></span>
                </div>

                <!-- Campo Domicilio -->
                <div class="form-group mb-3">
                    <label asp-for="Domicilio" class="form-label">Domicilio</label>
                    <input asp-for="Domicilio" class="form-control" />
                    <span asp-validation-for="Domicilio" class="text-danger"></span>
                </div>

                <!-- Campo Teléfono -->
                <div class="form-group mb-3">
                    <label asp-for="Tel" class="form-label">Teléfono</label>
                    <input asp-for="Tel" class="form-control" />
                    <span asp-validation-for="Tel" class="text-danger"></span>
                </div>

                <!-- Campo Productos -->
                <div class="form-group mb-3">
                    <label asp-for="Productos" class="form-label">Productos</label>
                    <textarea asp-for="Productos" class="form-control" rows="5" placeholder="Escribe cada producto en una nueva línea"></textarea>
                    <span asp-validation-for="Productos" class="text-danger"></span>
                </div>

                <!-- Campo Imagen (NombreFoto) -->
                <div class="form-group mb-3">
                    <label asp-for="NombreFoto" class="form-label">Imagen del Proveedor</label>
                    <input asp-for="NombreFoto" type="file" id="seleccionImg" class="form-control" onchange="mostrarImagenSeleccionada(event)" />
                    <span asp-validation-for="NombreFoto" class="text-danger"></span>
                </div>

                <!-- Previsualización de Imagen -->
                <div class="form-group text-center mb-3">
                    <img id="imagen" class="rounded-circle border" width="150" height="150" alt="Previsualización de la imagen" style="display: none;" />
                </div>

                <!-- Botones de Acción -->
                <div class="text-center">
                    <input type="submit" value="Crear" class="btn btn-primary me-2" />
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Función para mostrar la imagen seleccionada antes de guardarla
        function mostrarImagenSeleccionada(event) {
            var imagen = document.getElementById("imagen");
            var archivo = event.target.files[0];
            if (archivo) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    imagen.src = e.target.result;
                    imagen.style.display = "block"; // Mostrar la imagen seleccionada
                }
                reader.readAsDataURL(archivo);
            }
        }
    </script>
}

